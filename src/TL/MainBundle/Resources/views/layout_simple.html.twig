                           {% else %}

                                <li><a href="{{ path('TLMainBundle_page_pricing') }}">Join Today</a> &nbsp; | </li>
                                <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                            {% endif %}
                        </ul>                   
                    </nav><!-- nav -->  
                    <div class="clearfix"></div>
                </footer>
                </div>
            </div>
        </div>
        <!-- END FOOTER -->
        
    </div><!-- end outercontainer -->
</div><!-- end bodychild -->


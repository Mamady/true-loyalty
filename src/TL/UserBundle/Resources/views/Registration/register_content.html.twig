<div id="outermain" class="nopagetop">
    <div class="container">
        <section id="maincontent" class="row">
            <div class="twelvecol">
    
                <div class="separator"></div>
                <div class="sevencol ">
                    <div class="if-heading">
                        <h2><span>Create a Business Account</span></h2>
                                    
                        {{ form_errors(form) }}
                        
                        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="post" class="styledform">
                        
                            <fieldset>
                                        
                            <h4><span>Personal Details</span></h4>
 
                            <div class="twelvecol last">
                                <div class="twocol">
                                    {{ form_label(form.title) }}
                                    {{ form_errors(form.title) }}
                                    {{ form_widget(form.title) }}
                                </div>
                                <div class="fivecol">
                                    {{ form_label(form.firstName) }}
                                    {{ form_errors(form.firstName) }}
                                    {{ form_widget(form.firstName) }}
                                </div>
                                <div class="fivecol last">
                                    {{ form_label(form.lastName) }}
                                    {{ form_errors(form.lastName) }}
                                    {{ form_widget(form.lastName) }}
                                </div>

                                <div class="clearfix"></div>
                                <div class="separator"></div>

                                <div class="twelvecol">
                                    {{ form_label(form.email) }}
                                    {{ form_errors(form.email) }}
                                    {{ form_widget(form.email) }}
                                </div>
                                <div class="clearfix"></div>
                                <div class="separator"></div>

                                <div class="sixcol">
                                    {{ form_errors( form.plainPassword ) }}
                                    {{ form_row( form.plainPassword.password ) }}     
                                </div>
                                <div class="sixcol last">
                                    {{ form_row( form.plainPassword.confirm ) }}    
                                </div>

                                <div class="separator"></div>
                            </fieldset>

                            <div class="clearfix"></div>
                            <div class="separator"></div>
                            <div class="separator"></div>

                            <fieldset>

                                <h4><span>Mailing Address</span></h4>
                                
                                <div class="twelvecol">
                                    {{ form_label(form.company) }}
                                    {{ form_errors(form.company) }}
                                    {{ form_widget(form.company) }}
                                </div>
                                <div class="clearfix"></div>
                                <div class="separator"></div>

                            
                                <div class="sixcol">
                                    {{ form_label(form.address1) }}
                                    {{ form_errors(form.address1) }}
                                    {{ form_widget(form.address1) }}
                                </div>
                                <div class="sixcol last">
                                    {{ form_label(form.address2) }}
                                    {{ form_errors(form.address2) }}
                                    {{ form_widget(form.address2) }}
                                    </div>

                                <div class="clearfix"></div>
                                <div class="separator"></div>
                            
                                <div class="sixcol">
                                    {{ form_label(form.city) }}
                                    {{ form_errors(form.city) }}
                                    {{ form_widget(form.city) }}
                                </div>
                                <div class="sixcol last">
                                    {{ form_label(form.postcode) }}
                                    {{ form_errors(form.postcode) }}
                                    {{ form_widget(form.postcode) }}
                                    </div>

                                <div class="clearfix"></div>
                                <div class="separator"></div>
                        
                                <div class="sixcol last">
                                    {{ form_label(form.country) }}
                                    {{ form_errors(form.country) }}
                                    {{ form_widget(form.country) }}
                                </div>

                                <div class="separator"></div>
                            </fieldset>

                            <div class="clearfix"></div>
                            <div class="separator"></div>
                            <div class="separator"></div>

                            <fieldset>

                                <h4><span>Other Details</span></h4>

                                <div class="sixcol">
                                    {{ form_label(form.phone) }}
                                    {{ form_errors(form.phone) }}
                                    {{ form_widget(form.phone) }}
                                </div>

                                <div class="sixcol last">
                                    {{ form_label(form.website) }}
                                    {{ form_errors(form.website) }}
                                    {{ form_widget(form.website) }}
                                </div>

                                {{ form_rest(form) }}
                                <div class="clearfix"></div>
                                
                                <div class="separator"></div>
                            </fieldset>

                                <div class="clearfix"></div>
                                
                                <div class="separator"></div>
 
                            <div class="center">
                                <input type="submit" value="Create Account &raquo;" class="btn btn-primary">
                            </div>
                        </form>

                    </div>
                </div>

                <div class="twocol center">
                    <div class="separator"></div>
                    <div class="separator"></div>
                    <h3>OR</h3>
                </div>

                <div class="threecol center last">
                <div class="separator"></div>
                    <div class="if-heading">
                        <h3><span>Already a Member?</span></h3>
                    
                        <a href="{{ path('fos_user_security_login') }}" class="btn btn-success">Sign In &raquo;</a>
                    </div>
                </div>

            </div>
            <div class="clearfix"></div>
        </section>
    </div>
</div>

